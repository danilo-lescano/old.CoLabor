    var f1_1 = document.getElementById("explore");
    var f1_2 = document.getElementById("navbar");
    function f1() {
        var h = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);
        var w = Math.max(document.documentElement.clientWidth, window.innerWidth || 0) * 9/16;
        var marginTop = h;
        if(w < h)
            marginTop = w;
        marginTop -= (f1_2.offsetHeight + 128);
        f1_1.style.marginTop = marginTop + "px";
    }
    function f2() {
        var cardTxts = document.getElementsByClassName("card-box-txt");
        for(var i = 0; i < cardTxts.length; i+=2)
